{
  "name": "todo-myapp-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "build:css": "sass public/scss/styles.scss public/styles.css --no-source-map --style=compressed",
    "build:css:dev": "sass --watch public/scss/styles.scss:public/styles.css --style=expanded --source-map",
    "build:ts": "tsc --project tsconfig.json --outDir dist",
    "build": "npm run clean && NODE_ENV=production npm run build:css && npm run build:ts",
    "dev": "npm-run-all -p build:css:dev dev:ts",
    "dev:ts": "tsc --watch --project tsconfig.json --outDir dist"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "sass": "^1.77.0",
    "npm-run-all": "^4.1.5"
  }
}
